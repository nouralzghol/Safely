    <!--        android:layout_marginEnd="30dp"-->
    <!--        android:hint="car name:" />-->

    <TextView
        android:id="@+id/carName_dInfo"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/DriverPhoneNumber_info"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/female_dInfo"
        android:hint="car name"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/dash_dInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DriverPhoneNumber_info"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/carName_dInfo"
        android:text="-" />

    <TextView
        android:id="@+id/carColor_dInfo"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/DriverPhoneNumber_info"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/dash_dInfo"
        android:hint="car color"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/carNumber_dInfo"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/DriverPhoneNumber_info"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@id/carColor_dInfo"
        android:hint="car number"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/carpink"
        android:layout_width="51dp"
        android:layout_height="55dp"
        android:layout_below="@id/female_dInfo"
        android:layout_marginStart="14dp"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/female_dInfo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/roundedRectangleView"
        android:layout_marginStart="14dp"
        android:layout_marginTop="-170dp"
        android:src="@drawable/female_profile" />
