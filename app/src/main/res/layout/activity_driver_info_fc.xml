    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:ignore="MissingConstraints"
        android:visibility="visible"

        />


    <TextView
        android:id="@+id/DriverName_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roundedRectangleView"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-170dp"
        android:layout_toRightOf="@id/female_dInfo"
        android:text="Driver's name :"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/editDriverName_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roundedRectangleView"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-170dp"
        android:layout_toRightOf="@id/DriverName_info"
        android:hint="\''driver name\''"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/DriverAge_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roundedRectangleView"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-170dp"
        android:layout_toRightOf="@id/editDriverName_info"
        android:text="Age:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/editDriverAge_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roundedRectangleView"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-170dp"
        android:layout_toRightOf="@id/DriverAge_info"
        android:hint="\''age\''" />

    <TextView
        android:id="@+id/ShowDriverRate_dProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DriverAge_info"
        android:layout_alignStart="@+id/DriverAge_info"
        android:layout_marginTop="20dp"
        android:text="Rate:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/editRate_dProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DriverAge_info"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/ShowDriverRate_dProfile"
        android:hint=""
        android:textColor="@color/black"
        android:textSize="15sp" />

    <!--    -->

    <TextView
        android:id="@+id/DriverPhoneNumber_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DriverName_info"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/female_dInfo"
        android:text="Phone Number :"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/editDriverPhoneNumber_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DriverName_info"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/DriverPhoneNumber_info"
        android:hint="\''Phone Number\''"
        android:textColor="@color/black" />

