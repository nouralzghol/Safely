<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Driver_HomePage" />

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="483dp"
        android:background="@android:color/transparent"
        android:onClick="goToProfile"
        android:src="@drawable/profile" />


    <ImageView
        android:id="@+id/whiteBox"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rectangle"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="530dp" />


    <Switch
        android:id="@+id/workingSwitch"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/whiteBox"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:text="start working"
        tools:ignore="UseSwitchCompatOrMaterialXml" />



    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workingSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="you're offline"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ratingStar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/state"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ratingstar" />


    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingStar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>
